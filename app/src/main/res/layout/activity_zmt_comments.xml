<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_header_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.touyuanren.hahahuyu.widget.LoadListViewForScrollView
            android:id="@+id/llv_topiclist_zimeiti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.touyuanren.hahahuyu.widget.LoadListViewForScrollView>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:background="@color/color_999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_write_comment_zimeiti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/layout_10dp"
                android:text="@string/write_comment"
                android:textSize="@dimen/size_16" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>