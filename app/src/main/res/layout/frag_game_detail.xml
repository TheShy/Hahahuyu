<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ima_haibao_game_frag"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/haibao"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/title_game_detail_frag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginTop="@dimen/layout_15dp"
                    android:text="@string/xuanmei"
                    android:textColor="@color/color_282828"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_browse_game_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_game_detail_frag"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/yanjing"
                    android:gravity="center_vertical"
                    android:text="@string/liulan_account"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_collect_count_game_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_game_detail_frag"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv_browse_game_detail"
                    android:drawableLeft="@drawable/shoucang"
                    android:gravity="center_vertical"
                    android:text="@string/collect_count"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View style="@style/divide_line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tv_huodong_detail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@drawable/shikebiao" />

                <TextView
                    android:id="@+id/tv_gametime_frag"
                    style="@style/tv_huodong_detail"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:gravity="center_vertical"
                    android:text="@string/time_activity_detail" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:text="至" />

                <TextView
                    android:id="@+id/tv_baoming_endtime_game"
                    style="@style/tv_huodong_detail"
                    android:gravity="center_vertical"
                    android:text="@string/time_activity_detail" />
            </LinearLayout>

            <!--<View style="@style/divide_line2" />-->

            <View style="@style/divide_line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tv_huodong_detail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@drawable/zuobiao"
                    android:drawableLeft="@drawable/details_location"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_address_game_detail_frag"
                    style="@style/tv_huodong_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:gravity="center_vertical"
                    android:text="@string/address_activity_detail" />

            </LinearLayout>

            <View style="@style/divide_line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tv_huodong_detail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@drawable/renwu"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/number_people"
                    style="@style/tv_huodong_detail"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:gravity="center_vertical"
                    android:text="@string/join_number_people" />

            </LinearLayout>

            <View style="@style/divide_line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tv_huodong_detail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@drawable/qian"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_price_game_ticket"
                    style="@style/tv_huodong_detail"
                    android:layout_below="@id/title_game_detail_frag"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:gravity="center_vertical"
                    android:text="@string/price_ticket"
                    android:textColor="#efcb7d" />


            </LinearLayout>

            <View style="@style/divide_line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.touyuanren.hahahuyu.widget.CircleImageView
                    android:id="@+id/ima_zhubanfang_game_detail"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:elevation="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_user"
                    app:border_color="#ed2941" />

                <TextView
                    android:id="@+id/zhubanfang_game_detail_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_10dp"
                    android:layout_toRightOf="@id/ima_zhubanfang_game_detail"
                    android:text="@string/zhubanfang"
                    android:textColor="@color/color_282828"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/ll_watch_fabu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zhubanfang_game_detail_frag"
                    android:layout_toRightOf="@id/ima_zhubanfang_game_detail"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="@string/watch_number" />

                    <TextView
                        android:id="@+id/tv_watch_zhubanf_game_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="@string/watch_number_zhubanfan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:text="@string/yifabu" />

                    <TextView
                        android:id="@+id/tv_fabu_game_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:text="@string/fabu_count" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/ima_zhubanfang_game_detail"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xiangqingye_bg"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:text="@string/watch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/xiangqingye_bg"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:text="@string/reward" />
                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/divide_line2"
                android:layout_marginTop="@dimen/layout_10dp" />

            <TextView
                android:id="@+id/tv_moredetail_game_frag"
                style="@style/tv_huodong_detail"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:clickable="true"
                android:text="@string/more_detail_msg" />

            <!--<View-->
            <!--android:id="@+id/divide_game_detail2"-->
            <!--style="@style/divide_line2"></View>-->

            <!--<TextView-->
            <!--android:id="@+id/process_game_detail_act"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="true"-->
            <!--android:drawableRight="@drawable/details_jiantou_bg"-->
            <!--android:text="@string/game_process"-->
            <!--android:textSize="18sp" />-->

            <!--<View-->
            <!--android:id="@+id/divide_game_detail6"-->
            <!--style="@style/divide_line"-->
            <!--android:layout_below="@id/process_game_detail_act"></View>-->

            <!--<TextView-->
            <!--android:id="@+id/report_game_detail_act"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/divide_game_detail6"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:clickable="true"-->
            <!--android:drawableRight="@drawable/details_jiantou_bg"-->
            <!--android:text="@string/report_process"-->
            <!--android:textSize="18sp" />-->

            <View style="@style/divide_line2" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/layout_10dp"
                    android:paddingRight="@dimen/layout_10dp"
                    android:layout_margin="@dimen/layout_10dp">

                    <TextView
                        android:id="@+id/ima_icon_player_gamedetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选手参赛列表"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:drawableTop="@drawable/ic_launcher"
                         />
                    <TextView
                        android:id="@+id/ima_gamer_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="观众参赛列表"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_launcher"

                        />
                </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_collect_game_detail_act"
            style="@style/text_botton_detail"
            android:drawableTop="@drawable/collect_huodong"
            android:text="@string/collect" />

        <TextView
            android:id="@+id/baoming_game_detail_act"
            style="@style/text_botton_detail"
            android:background="@color/color_green"
            android:text="@string/xuanshoubaoming"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/baoming_audience_game_act"
            style="@style/text_botton_detail"
            android:background="@color/color_ceshi"
            android:text="@string/weiguan_baoming"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>