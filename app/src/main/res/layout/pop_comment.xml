<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_10dp"
        android:background="@drawable/rect_edittext">
        <EditText
            android:id="@+id/et_comment_pop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/layout_30dp"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:imeOptions="actionGo"
            android:background="@drawable/rect_edittext"
            android:gravity="left"
            android:hint="@string/comment_hint"
            android:padding="@dimen/dimen_5dp"
            android:textColor="@color/color_app_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/fabiao"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/size_16"
            android:id="@+id/tv_pinglun_fabiao"
            android:textColor="@color/color_app_text" />
    </LinearLayout>



