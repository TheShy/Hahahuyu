<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
    <!--评论列表模板-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.touyuanren.hahahuyu.widget.CircleImageView
            android:id="@+id/icon_img_comment_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_user"
            app:border_color="#ed2941" />
        <!--<com.zztd.gameplatform.widget.RoundImageView-->
        <!--android:id="@+id/icon_img_comment_item"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/icon_user" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_comment_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nickname"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_12" />

            <TextView
                android:id="@+id/tv_title_content_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:text="这个活动真不错"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_time_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分钟前"
                    android:textColor="@color/color_app_text"
                    android:textSize="@dimen/size_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:src="@drawable/comment_raise" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>