<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ima_friend_item"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/yujiazai"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/text_11sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_friend_title"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_333"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_18"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:text="gjcvm,v," />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_friend_title"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/layout_15dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tv_friend_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_16"
                        android:textColor="@color/color_999"
                        android:text="hj, " />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>