<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="337dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img_ds_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashang_programme"
                android:id="@+id/textView18"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/layout_24dp"
                android:layout_margin="@dimen/layout_15dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_ds_close"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/quxiao"
                android:layout_margin="@dimen/layout_15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18">

            <RelativeLayout
                android:layout_width="176dp"
                android:layout_height="176dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/img_dashang">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <EditText
                        android:background="@null"
                        android:id="@+id/et_reward"
                        android:layout_width="wrap_content"
                        android:text="2"
                        android:focusable="false"
                        android:textSize="@dimen/layout_70dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ï¿¥"
                        android:id="@+id/textView19"
                        android:textSize="@dimen/layout_50dp"
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="@dimen/layout_175dp"
                android:layout_height="@dimen/layout_45dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/img_ds_btn"
                android:id="@+id/rl_ds_ok">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashang_programme"
                    android:id="@+id/textView20"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_20sp"
                    android:textColor="@color/color_ff9292" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>