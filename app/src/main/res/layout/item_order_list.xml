<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">
    <!--首页活动列表的模板 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <!--<ImageView-->
            <!--android:id="@+id/ima_order_item"-->
            <!--android:layout_width="127dp"-->
            <!--android:layout_height="76.5dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/huodonghaibao" />-->

        <TextView
            android:id="@+id/tv_title_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/xuanmei"
            android:textColor="@color/color_app_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_order_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:text="@string/order_bianhao"
            android:textColor="@color/color_app_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_number_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_order_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_toRightOf="@id/tv_order_number"
            android:text="@string/order_bianhao_number"
            android:textColor="@color/color_app_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:text="@string/order_type"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_order_type_detail_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_toRightOf="@id/tv_order_type"
            android:text="@string/order_type"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        style="@style/divide_line_normal"
        android:layout_marginTop="@dimen/dimen_5dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:text="@string/total"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_pricer_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:text="@string/total_price"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_topay_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:background="@drawable/rect_white"
            android:text="@string/order_topay"
            android:padding="@dimen/dimen_5dp"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_del_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@drawable/rect_white"
            android:text="@string/order_delete"
            android:padding="@dimen/dimen_5dp"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

</LinearLayout>