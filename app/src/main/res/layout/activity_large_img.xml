<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <com.touyuanren.hahahuyu.widget.HackyViewPager
        android:id="@+id/viewpager_large_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/text_view_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/layout_20dp"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_large_img_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/layout_20dp"
        android:layout_toLeftOf="@+id/text_view_divider"
        android:layout_toStartOf="@+id/text_view_divider"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:text="5" />

    <TextView
        android:id="@+id/text_view_large_img_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/layout_20dp"
        android:layout_toRightOf="@+id/text_view_divider"
        android:layout_toEndOf="@+id/text_view_divider"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:text="7" />
    <TextView
        android:id="@+id/text_save_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_save"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/layout_10dp"/>
    <TextView
        android:id="@+id/text_large_img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/icon_large_back"
        android:layout_margin="@dimen/layout_10dp"
        />
</RelativeLayout>