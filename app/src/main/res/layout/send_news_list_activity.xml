<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_header_bar"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/send_news_list_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.touyuanren.hahahuyu.widget.LoadListView
            android:id="@+id/send_news_lv"
            android:dividerHeight="@dimen/size_16"
            android:divider="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
