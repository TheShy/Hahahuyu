<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header_bar"></include>
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "@dimen/margin_frame"
        android:layout_marginRight = "@dimen/margin_frame"
        android:layout_marginTop = "22dp"
        android:paddingRight = "10dp"
        android:paddingLeft = "0dp"
        android:background = "@drawable/n_edittext_bg">

        <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center_vertical"
            android:background = "@drawable/n_phone"
            android:layout_marginLeft = "10dp"/>

        <View
            android:layout_width = "0.2dp"
            android:layout_height = "match_parent"
            android:background = "@color/color_D8D8D8"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"/>

        <EditText
            android:id = "@+id/et_register_phone"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:phoneNumber="true"
            android:layout_gravity = "center_vertical"
            android:background = "@android:color/transparent"
            android:hint = "@string/write_phone_number"
            android:textColorHint = "#CCCCCC"
            android:textSize = "@dimen/size_16"
            android:singleLine = "true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "@dimen/margin_frame"
        android:layout_marginRight = "@dimen/margin_frame"
        android:layout_marginTop = "22dp"
        android:background = "@drawable/n_edittext_bg"
        android:paddingRight = "10dp"
        android:paddingLeft = "0dp"
        android:orientation = "horizontal">

        <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center_vertical"
            android:background = "@drawable/n_pwd"
            android:layout_marginLeft = "10dp"/>

        <View
            android:layout_width = "0.2dp"
            android:layout_height = "match_parent"
            android:background = "@color/color_D8D8D8"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"/>

        <EditText
            android:id = "@+id/et_register_pwd"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:layout_gravity = "center_vertical"
            android:background = "@android:color/transparent"
            android:hint = "@string/input_psw"
            android:textColorHint = "#CCCCCC"
            android:inputType = "textPassword"
            android:textSize = "@dimen/size_16"
            android:singleLine = "true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "@dimen/margin_frame"
        android:layout_marginRight = "@dimen/margin_frame"
        android:layout_marginTop = "22dp"
        android:background = "@drawable/n_edittext_bg"
        android:paddingRight = "10dp"
        android:paddingLeft = "0dp"
        android:orientation = "horizontal">

        <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center_vertical"
            android:background = "@drawable/n_pwd"
            android:layout_marginLeft = "10dp"/>

        <View
            android:layout_width = "0.2dp"
            android:layout_height = "match_parent"
            android:background = "@color/color_D8D8D8"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"/>

        <EditText
            android:id = "@+id/et_register_pwd_confirm"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:layout_gravity = "center_vertical"
            android:background = "@android:color/transparent"
            android:hint = "@string/input_psw_confirm"
            android:textColorHint = "#CCCCCC"
            android:inputType = "textPassword"
            android:textSize = "@dimen/size_16"
            android:singleLine = "true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "@dimen/margin_frame"
        android:layout_marginRight = "@dimen/margin_frame"
        android:layout_marginTop = "22dp"
        android:padding = "0dp"
        android:background = "@drawable/n_edittext_bg"
        android:orientation = "horizontal">

        <LinearLayout
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:layout_gravity = "center_vertical">

            <EditText
                android:id = "@+id/et_register_authcode"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_vertical"
                android:background = "@android:color/transparent"
                android:paddingLeft = "10dp"
                android:paddingRight = "10dp"
                android:hint = "@string/write_auth_code"
                android:textColorHint = "#CCCCCC"
                android:inputType = "number"
                android:textSize = "@dimen/size_16"
                android:singleLine = "true"/>
        </LinearLayout>

        <Button
            android:id = "@+id/bt_register_get_authcode"
            android:layout_width = "1dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:background = "@drawable/n_code"
            android:textColor = "@android:color/white"
            android:layout_margin = "0dp"
            android:textSize = "@dimen/size_16"
            android:text = "@string/get_auth_code"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "@dimen/margin_frame"
        android:layout_marginRight = "@dimen/margin_frame"
        android:layout_marginTop = "22dp"
        android:visibility="gone"
        android:padding = "0dp"
        android:background = "@drawable/n_edittext_bg"
        android:orientation = "horizontal">

        <ImageView
            android:id="@+id/iv_image_code"
            android:layout_width = "100dp"
            android:layout_height = "30dp"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:layout_gravity = "center_vertical">

            <EditText
                android:id = "@+id/et_image_code"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center_vertical"
                android:background = "@android:color/transparent"
                android:paddingLeft = "10dp"
                android:paddingRight = "10dp"
                android:hint = "@string/write_auth_code"
                android:textColorHint = "#CCCCCC"
                android:textSize = "@dimen/size_16"
                android:singleLine = "true"/>
        </LinearLayout>

        <Button
            android:id = "@+id/bt_change_next"
            android:layout_width = "1dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:background = "@drawable/n_code"
            android:textColor = "@android:color/white"
            android:layout_margin = "0dp"
            android:textSize = "@dimen/size_16"
            android:text = "@string/change_next"/>
    </LinearLayout>

