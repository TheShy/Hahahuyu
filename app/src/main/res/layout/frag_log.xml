<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/vs_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/vs_no_message" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_list_log_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.touyuanren.hahahuyu.widget.LoadListView
            android:id="@+id/lv_loglist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.touyuanren.hahahuyu.widget.LoadListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>