<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <include layout="@layout/common_header_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_20dp"
            android:layout_marginRight="@dimen/layout_30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_baoming"
                    android:textSize="@dimen/size_16" />

                <EditText
                    android:id="@+id/game_person_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/n_edittext_bg"
                    android:padding="@dimen/dimen_5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_baoming"
                    android:textSize="@dimen/size_16" />

                <EditText
                    android:id="@+id/game_person_et_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/n_edittext_bg"
                    android:padding="@dimen/dimen_5dp"
                    android:phoneNumber="true" />
            </LinearLayout>


        </LinearLayout>

        <ListView
            android:id="@+id/game_person_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"></ListView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="bottom"
        android:background="@color/whiteNew"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:gravity="right"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/game_person_tv_price"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1dp"
            android:text="@string/total_price"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/game_person_tv_apaly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:text="@string/go_to_pay"></TextView>
    </LinearLayout>
</LinearLayout>
