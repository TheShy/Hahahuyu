<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_search"
              android:orientation="vertical">

    <include layout="@layout/common_header_bar"></include>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/more_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/act_more_hd_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitecolor"
            android:dividerHeight="@dimen/dimen_2dp"
            android:divider="@color/gray"
            android:focusable="false"
            />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>