<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"

    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ima_haibao_detatil_frag"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/haibao" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/title_huodong_frag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginTop="@dimen/layout_15dp"
                    android:text="@string/xuanmei"
                    android:textColor="@color/color_282828"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/browse_activity_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/collect_count_detail"
                    android:drawableLeft="@drawable/yanjing"
                    android:gravity="center_vertical"
                    android:text="@string/liulan_account"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/collect_count_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_huodong_frag"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/browse_activity_detail"
                    android:drawableLeft="@drawable/shoucang"
                    android:gravity="center_vertical"
                    android:text="@string/collect_count"
                    android:textSize="12sp" />

                <!--<TextView-->
                <!--android:id="@+id/tv_price_ticket"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/title_huodong_frag"-->
                <!--android:layout_marginLeft="@dimen/dimen_5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toRightOf="@id/collect_count_detail"-->
                <!--android:drawableLeft="@drawable/details_ticket_price"-->
                <!--android:text="@string/price_ticket"-->
                <!--android:textSize="12sp" />-->

            </RelativeLayout>

            <View style="@style/divide_line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tv_huodong_detail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@drawable/shikebiao" />

                <TextView
                    android:id="@+id/tv_huodongtime_frag"
                    style="@style/tv_huodong_detail"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:gravity="center_vertical"
                    android:text="@string/time_activity_detail" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:text="è‡³" />

                <TextView
                    android:id="@+id/tv_baoming_endtime_frag"
                    style="@style/tv_huodong_detail"
                    android:gravity="center_vertical"
                    android:text="@string/time_activity_detail" />
            </LinearLayout>

            <View style="@style/divide_line2" />

            <!--<View style="@style/divide_line2" />-->

            <!--<View style="@style/divide_line2" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tv_huodong_detail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@drawable/zuobiao"
                    android:drawableLeft="@drawable/details_location"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_address_detail_frag"
                    style="@style/tv_huodong_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:gravity="center_vertical"
                    android:text="@string/address_activity_detail" />

            </LinearLayout>


            <View style="@style/divide_line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tv_huodong_detail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@drawable/renwu"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_number_people"
                    style="@style/tv_huodong_detail"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:gravity="center_vertical"
                    android:text="@string/join_number_people" />

            </LinearLayout>

            <View style="@style/divide_line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <com.touyuanren.hahahuyu.widget.CircleImageView
                    android:id="@+id/ima_zhubanfang_detail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:elevation="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_user"
                    app:border_color="#ed2941" />

                <TextView
                    android:id="@+id/zhubanfang_huodong_detail_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_10dp"
                    android:text="@string/zhubanfang"
                    android:textColor="@color/color_282828"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/ima_zhubanfang_detail" />

                <LinearLayout
                    android:id="@+id/ll_watch_fabu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zhubanfang_huodong_detail_frag"
                    android:layout_toRightOf="@id/ima_zhubanfang_detail"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="@string/watch_number" />

                    <TextView
                        android:id="@+id/tv_watch_zhubanf_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="@string/watch_number_zhubanfan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:text="@string/yifabu" />

                    <TextView
                        android:id="@+id/tv_fabu_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:text="@string/fabu_count" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/ima_zhubanfang_game_detail"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xiangqingye_bg"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:text="@string/watch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xiangqingye_bg"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:text="@string/reward" />
                </LinearLayout>

                <TextView
                    android:id="@+id/moredetail_msg_frag"
                    style="@style/tv_huodong_detail"
                    android:clickable="true"
                    android:text="@string/more_detail_msg"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:layout_marginRight="@dimen/layout_15dp"
                    android:layout_alignTop="@+id/ll_watch_fabu"
                    android:layout_alignEnd="@+id/linearLayout3"
                    android:layout_marginBottom="@dimen/layout_20dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/collect_detail_activity"
            style="@style/text_botton_detail"
            android:drawableTop="@drawable/collect_huodong"
            android:text="@string/collect" />

        <TextView
            android:id="@+id/buy_ticket_detail"
            style="@style/text_botton_detail"
            android:background="@color/color_ceshi"
            android:clickable="true"
            android:text="@string/baoming_immediately"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>