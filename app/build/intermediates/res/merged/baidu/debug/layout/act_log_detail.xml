<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_header_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_logdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_7dp"
                android:layout_marginTop="@dimen/layout_24dp"
                android:textSize="20sp"
                android:text="@string/title_album"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nickname_logdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/title_album"
                    android:textSize="@dimen/size_12"
                    android:layout_marginLeft="@dimen/layout_7dp"/>
                <TextView
                    android:id="@+id/tv_date_logdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/title_album"
                    android:textSize="@dimen/size_12"
                    android:layout_marginLeft="@dimen/layout_7dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_msg_logdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_7dp"
                android:layout_marginTop="@dimen/layout_15dp"
                android:textSize="@dimen/size_16"
                android:text="@string/title_album"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_20dp"
                android:paddingBottom="@dimen/dimen_5dp">

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/source_zimeiti"-->
                <!--android:textColor="@color/color_app_text" />-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/liulan_account"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:textColor="@color/color_app_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment_like_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:src="@drawable/share_32px" />

                <ImageView
                    android:id="@+id/ima_comment_log_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_20dp"
                    android:src="@drawable/comment" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>