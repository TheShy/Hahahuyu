<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_item_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_ticket"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/tv_price_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FA9C26"
                    android:text="@string/number_price"
                    android:textSize="@dimen/size_16" />
            </LinearLayout>


            <ImageView
                android:background="@drawable/state_ticket"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:id="@+id/iv_state_ticket"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/linearLayout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:id="@+id/hd_name"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/size_16"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_FA9C26"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="15dp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hd_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:id="@+id/linearLayout2">

                <TextView
                    android:id="@+id/tv_introduce_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/introduce_ticket"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_title_ticket"
                    android:layout_height="wrap_content"
                    android:text="@string/ticket_free"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_16"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>