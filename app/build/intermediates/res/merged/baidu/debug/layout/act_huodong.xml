<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_header_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fenlei_hd_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/layout_10dp"
            android:drawableRight="@drawable/img_xia"
            android:text="@string/fenlei_all"
            android:textSize="@dimen/button_size"
            android:background="@color/color_eeeeee" />

        <View
            style="@style/divide_line_normal"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"></View>

        <TextView
            android:id="@+id/tv_shaixuan_hd_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/layout_10dp"
            android:drawableRight="@drawable/img_xia"
            android:text="@string/shaixuan"
            android:textSize="@dimen/button_size"
            android:background="@color/color_eeeeee" />

        <View
            style="@style/divide_line_normal"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"></View>

        <TextView
            android:id="@+id/tv_sort_hd_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/layout_10dp"
            android:drawableRight="@drawable/img_xia"
            android:text="@string/zhineng_paixu"
            android:textSize="@dimen/button_size"
            android:background="@color/color_eeeeee" />
    </LinearLayout>

    <View
        style="@style/divide_line_normal"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"></View>

    <com.touyuanren.hahahuyu.widget.LoadListView
        android:id="@+id/lv_huodong_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.touyuanren.hahahuyu.widget.LoadListView>
</LinearLayout>