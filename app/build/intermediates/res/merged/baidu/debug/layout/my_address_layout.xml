<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/address_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee">

        <Button
            android:id="@+id/city_picker_sure"
            android:layout_width="@dimen/layout_70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:background="@drawable/my_sign_choose_btn"
            android:text="@string/OK" />

        <Button
            android:id="@+id/city_picker_cancel"
            android:layout_width="@dimen/layout_70dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/my_sign_choose_btn"
            android:text="@string/publish_action_cancel" />

    </RelativeLayout>

    <com.touyuanren.hahahuyu.widget.CityPicker
        android:id="@+id/city_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_top_layout"
        android:gravity="center" />


</RelativeLayout>