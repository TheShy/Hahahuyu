<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:background="@color/color_eeeeee"
        android:layout_above="@+id/ll_quxiao"
        android:id="@+id/gridview_fabu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_quxiao"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_shouye_quxiao"
            android:layout_margin="@dimen/layout_10dp"
            android:src="@drawable/quxiao"
            android:layout_width="@dimen/layout_30dp"
            android:layout_height="@dimen/layout_30dp" />
    </LinearLayout>

</RelativeLayout>